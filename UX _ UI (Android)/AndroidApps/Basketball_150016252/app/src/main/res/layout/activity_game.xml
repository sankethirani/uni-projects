<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity"
    android:background="#EEEEEE">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="16dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/team_a_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Team A"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/team_a_score_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="36sp"
                    android:layout_gravity="center"
                    android:layout_marginVertical="16dp"
                    android:textColor="#FF9800"/>

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:cardBackgroundColor="#7CB342"
                    app:cardCornerRadius="16dp"
                    android:layout_marginBottom="10dp"
                    android:onClick="Plus3TeamA">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+3 Points"
                        android:padding="16dp"
                        android:layout_marginHorizontal="6dp"
                        android:textColor="#ffff"/>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:cardBackgroundColor="#7CB342"
                    app:cardCornerRadius="16dp"
                    android:layout_marginBottom="10dp"
                    android:onClick="Plus2TeamA">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+2 Points"
                        android:padding="16dp"
                        android:layout_marginHorizontal="6dp"
                        android:textColor="#ffff"/>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:cardBackgroundColor="#7CB342"
                    app:cardCornerRadius="16dp"
                    android:layout_marginBottom="10dp"
                    android:onClick="Plus1TeamA">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+1 Points"
                        android:padding="16dp"
                        android:layout_marginHorizontal="6dp"
                        android:textColor="#ffff"/>
                </android.support.v7.widget.CardView>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="16dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="8dp">
                <TextView
                    android:id="@+id/team_b_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Team B"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/team_b_score_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="36sp"
                    android:layout_gravity="center"
                    android:layout_marginVertical="16dp"
                    android:textColor="#FF9800"/>

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:cardBackgroundColor="#7CB342"
                    app:cardCornerRadius="16dp"
                    android:layout_marginBottom="8dp"
                    android:onClick="Plus3TeamB">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+3 Points"
                        android:padding="16dp"
                        android:layout_marginHorizontal="6dp"
                        android:textColor="#ffff"/>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:cardBackgroundColor="#7CB342"
                    app:cardCornerRadius="16dp"
                    android:layout_marginBottom="8dp"
                    android:onClick="Plus2TeamB">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+2 Points"
                        android:padding="16dp"
                        android:layout_marginHorizontal="6dp"
                        android:textColor="#ffff"/>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:cardBackgroundColor="#7CB342"
                    app:cardCornerRadius="16dp"
                    android:layout_marginBottom="8dp"
                    android:onClick="Plus1TeamB">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+1 Points"
                        android:padding="16dp"
                        android:layout_marginHorizontal="6dp"
                        android:textColor="#ffff"/>
                </android.support.v7.widget.CardView>

            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <Button
        android:id="@+id/reet_score_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#0091EA"
        android:textColor="#ffffff"
        android:padding="8dp"
        android:text="RESET SCORES"
        android:onClick="ResetScores"
        android:layout_marginBottom="24dp"
        android:elevation="8dp"/>

</RelativeLayout>